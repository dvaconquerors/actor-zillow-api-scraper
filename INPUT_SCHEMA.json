{
    "title": "Zillow.com scraper input schema",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "search": {
            "title": "Search",
            "type": "string",
            "editor": "textfield",
            "prefill": "Los Angeles",
            "description": "Query to search on Zillow.com"
        },
        "zipcodes": {
            "title": "Zipcodes",
            "type": "array",
            "editor": "json",
            "description": "List of ZIP codes that will be scraped."
        },
        "maxItems": {
            "title": "Max items",
            "type": "integer",
            "minimum": 0,
            "prefill": 2000,
            "description": "Limit of home detail pages to be scraped"
        },
        "resultsPerSearch": {
            "title": "Results per search",
            "type": "integer",
            "minimum": 0,
            "prefill": 8,
            "description": "Limit of home detail pages to be scraped"
        },
        "minDate": {
            "title": "Min date",
            "type": "string",
            "editor": "textfield",
            "description": "Oldest date allowed in results"
        }
    }
}
