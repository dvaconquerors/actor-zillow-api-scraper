{
    "title": "Zillow.com scraper input schema",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "search": {
            "title": "Search",
            "type": "string",
            "editor": "textfield",
            "prefill": "Los Angeles",
            "description": "Query to search on Zillow.com"
        },
        "type": {
            "title": "Type",
            "type": "string",
            "description": "Property for sale/rent",
            "default": "all",
            "enum": [
                "all",
                "sale",
                "fsbo",
                "rent"
            ],
            "enumTitles": [
                "All",
                "For sale",
                "For sale by owner",
                "For rent"
            ]
        },
        "zipcodes": {
            "title": "Zipcodes",
            "type": "array",
            "editor": "json",
            "description": "List of ZIP codes that will be scraped."
        },
        "maxItems": {
            "title": "Max items",
            "type": "integer",
            "minimum": 0,
            "prefill": 2000,
            "description": "Limit of home detail pages to be scraped"
        },
        "resultsPerSearch": {
            "title": "Results per search",
            "type": "integer",
            "minimum": 0,
            "prefill": 8,
            "description": "Limit of home detail pages to be scraped"
        },
        "minDate": {
            "title": "Min date",
            "type": "string",
            "editor": "textfield",
            "description": "Oldest date allowed in results"
        },
        "proxyConfiguration": {
            "title": "Proxy configuration",
            "type": "object",
            "editor": "proxy",
            "description": "The best option is usually Automatic proxy. But you can also use your own proxies or no proxy",
            "prefill": { "useApifyProxy": true }
        }
    }
}
